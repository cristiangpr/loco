<main class="main">
  <h2>Sign in</h2>

  <div class="py-5 bg-light">
    <div class="container">
      <div class="row">

        <div class="col-md-12 col-lg-8 mb-5">



          <form action="sign_in" method="post" class="p-5 bg-white">

            <div class="row form-group">
              <div class="col-md-12 mb-3 mb-md-0">
                <label class="font-weight-bold" for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Username">
              </div>
            </div>


            <div class="form-group">
                <label for="password">Password</label>
               <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
                <small class="text-muted" id="passwordHelp"</small>
     </div>


            <div class="row form-group">
              <div class="col-md-12">
                <input type="submit" value="Sign In" class="btn btn-primary text-white px-4 py-2">
              </div>
            </div>


          </form>
        </div>
          </div>
        </div>
