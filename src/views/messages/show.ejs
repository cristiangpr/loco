<body>

  <!--==========================
  Header
  ============================-->
  <header id="header">
    <div class="container">

      <div id="logo" class="pull-left">

        <!-- Uncomment below if you prefer to use a text logo -->
        <h1><a href="/#hero">LCWS</a></h1>
      </div>
      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li class="menu-active"><a href="/">Home</a></li>
          <li><a href="/#about">About Us</a></li>
          <li><a href="/#services">Services</a></li>
          <li><a href="/#portfolio">Portfolio</a></li>
          <li><a href="/#team">Team</a></li>

          <li><a href="/#contact">Contact Us</a></li>
          <% if(currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_out">Sign out</a>
            <li><a href="/messages">Messages</a></li>
          </li>
        <% } else { %>
        <!-- #2 -->

          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in">Sign in</a>
          </li>
        <% }%>


        </ul>
      </nav>
    <% include ../static/partials/messages.ejs %>
    </div>
  </header><!-- #header -->

  <!--==========================
    Hero Section
  ============================-->

  <section id="hero">
    <div class="hero-container">
      <h1>Welcome to Lost Coast Web Solutions</h1>
      <h2>Building integrated bussiness solutions on the Lost Coast</h2>
      <a href="#about" class="btn-get-started">Message</a>
    </div>
  </section><!-- #hero -->

      <div class="container">
        <h1>Message</h1>
         <p>Name: <%= message.name %></p>
         <p>Email: <%= message.email %></p>
          <p>Phone: <%= message.phone %></p>

         <p>Message: <%= message.content %></p>
          <p>Notes: <%= message.notes %></p>
          <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
          <form style="display:initial" action="/messages/<%= message.id %>/destroy" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>


