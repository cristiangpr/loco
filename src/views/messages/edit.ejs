</head>


<body>

  <!--==========================
  Header
  ============================-->
  <header id="header">
    <div class="container">

      <div id="logo" class="pull-left">

        <!-- Uncomment below if you prefer to use a text logo -->
        <h1><a href="/#hero">LCWD</a></h1>
      </div>
      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li class="menu-active"><a href="/">Home</a></li>
          <li><a href="/#about">About Us</a></li>
          <li><a href="/#services">Services</a></li>
          <li><a href="/#portfolio">Portfolio</a></li>
          <li><a href="/#team">Team</a></li>

          <li><a href="/#contact">Contact Us</a></li>
          <% if(currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_out">Sign out</a>
            <li><a href="/messages">Messages</a></li>
          </li>
        <% } else { %>
        <!-- #2 -->

          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in">Sign in</a>
          </li>
        <% }%>


        </ul>
      </nav>

    </div>
      <% include ../static/partials/messages.ejs %>
  </header><!-- #header -->

  <!--==========================
    Hero Section
  ============================-->


<main class="main">
      <h2>Edit Message</h2>
      <div class="py-5 bg-light">
        <div class="container">
          <div class="row">

            <div class="col-md-12 col-lg-8 mb-5">



             <form action="/messages/<%= message.id %>/update" method="post">

                <div class="row form-group">
                  <div class="col-md-12 mb-3 mb-md-0">
                    <label for="name">Full Name</label>
                    <input value="<%= message.name %>"  type="text" class="form-control" name="name" placeholder="Enter Name">
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="email">Email</label>
                    <input value="<%= message.email %>"  type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                    <small class="text-muted" id="emailHelp">email address must be a valid address</small>
                  </div>
                </div>


                <div class="row form-group">
                  <div class="col-md-12 mb-3 mb-md-0">
                    <label for="phone">Phone</label>
                      <input value="<%= message.phone %>"  type="tel"  class="form-control" name="phone" placeholder="Phone #">
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="content">Message</label>
                    <textarea name="content"  cols="30" rows="5" class="form-control" placeholder="Send us a message"><%= message.content %></textarea>
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="notes">Notes</label>
                    <textarea name="notes"  cols="30" rows="5" class="form-control" placeholder="Add Notes"><%= message.notes %></textarea>
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col-md-12">
                    <input type="submit" value="Update" class="btn btn-primary text-white px-4 py-2">
                  </div>
                </div>


              </form>
            </div>
          </div>
        </div>
      </div>
        </main>

  <!--==========================
    Footer
  ============================-->
  <footer id="footer">
    <div class="footer-top">
      <div class="container">

      </div>
    </div>

    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong>LCWD</strong>. All Rights Reserved
      </div>
      <div class="credits">

      </div>
    </div>
  </footer><!-- #footer -->


  <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

